<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomTitleText" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomTextBold" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">12.8pt</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ItemUserNameLocation" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">20pt</item>
        <item name="android:textColor">@color/colorItemText</item>
    </style>

    <style name="ItemUserLogin" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">16pt</item>
        <item name="android:textColor">@color/colorItemText</item>
    </style>

    <style name="ItemRepositoryDescription" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">12.8pt</item>
        <item name="android:textColor">@color/colorItemText</item>
    </style>

    <style name="buttonBackUsers" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">12.8pt</item>
        <item name="android:textColor">@color/colorSKyBlue</item>
    </style>



</resources>
